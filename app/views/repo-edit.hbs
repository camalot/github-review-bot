{{#section 'head'}} {{/section}}

<div class="nav-bar">
	<a class="mdl-button mdl-button--icon mdl-button--colored  mdl-button--fab mdl-js-button mdl-js-ripple-effect" href="/">
		<i class="material-icons">arrow_back</i>
	</a>
</div>

{{#if repo}}
<section class="section--center mdl-grid">
<div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--2dp">
	<form method="post" action="/repos/enforce/{{repo.name}}">
		<div class="mdl-card__title mdl-card--border">
			<h2 class="mdl-card__title-text">{{repo.name}}</h2>
		</div>
		<div class="mdl-card__menu">
			<a class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" href="{{repo.html_url}}" title="Github" target="_blank">
				<i class="mdi mdi-github-circle"></i>
			</a>
		</div>
		<div class="mdl-color-text--grey-600 mdl-card__supporting-text">
			<div class="mdl-card__subtitle-text">{{repo.description}}</div>
			<div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
				<label class="mdl-textfield__label" for="reviews_{{repo.id}}">Required Reviews</label>
				<input class="mdl-textfield__input" type="number" name="reviewsNeeded" value="3" id="reviews_{{repo.id}}" />
			</div>
		</div>
		<div class="mdl-card__actions align-right mdl-card--border">
			<button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">Register Bot</button>
			<a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/repos/unenforce/{{repo.name}}">Deregister Bot</a>
		</div>
	</form>
</div>
</section>
{{/if}}

