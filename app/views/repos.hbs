 {{#section 'head'}} {{/section}}

<div class="nav-bar">
	<a class="mdl-button mdl-button--icon mdl-button--colored  mdl-button--fab mdl-js-button mdl-js-ripple-effect" href="/">
		<i class="material-icons">arrow_back</i>
	</a>
</div>

{{#if repos}}
<section class="section--center mdl-grid">
	{{#each repos}}
	<div class="mdl-card mdl-cell mdl-cell--4-col mdl-shadow--2dp">
		<form method="post" action="/repos/enforce/{{this.name}}">
			<div class="mdl-card__title mdl-card--border">
				<h2 class="mdl-card__title-text">{{this.name}}</h2>
			</div>
			<div class="mdl-color-text--grey-600 mdl-card__supporting-text">Created: {{this.updated_at}}</div>
			<div class="mdl-card__menu">
				<a class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" href="{{this.html_url}}" title="Github" target="_blank">
					<i class="mdi mdi-github-circle"></i>
				</a>
				<a class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect" href="/repos/{{this.name}}" title="Edit">
					<i class="material-icons">edit</i>
				</a>
			</div>
			<div class="mdl-color-text--grey-600 mdl-card__supporting-text">
				<div class="mdl-card__subtitle-text">{{this.description}}</div>
			</div>
		</form>
	</div>
	{{/each}}
</section>
{{else}}
<section class="section--center mdl-grid">
	<div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--2dp">
		<div class="mdl-card__title">
			<h2 class="mdl-card__title-text">No repositories found.</h2>
		</div>
	</div>
</section>
{{/if}} {{#section 'scripts'}} {{/section}}
